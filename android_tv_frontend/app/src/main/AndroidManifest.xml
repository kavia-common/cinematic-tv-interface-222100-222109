<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Declare Leanback feature to target TV devices; not strictly required so app remains installable on non-TV -->
    <uses-feature android:name="android.software.leanback" android:required="false" />

    <application
        android:label="@string/app_name"
        android:banner="@mipmap/ic_launcher"  >

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/AppTheme.Material3.DayNight.NoActionBar">
            <!-- Standard phone/tablet launcher (kept for flexibility) -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- TV launcher category so the app is visible/launchable on Android TV -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

    </application>
</manifest>
